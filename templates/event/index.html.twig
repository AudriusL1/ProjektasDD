{% extends 'base.html.twig' %}

{% block title %}All events{% endblock %}

{% block body %}
<td><a href="/event">Events</a></td>
<td><a href="/users">Users</a></td><br>
<td><a href="/event/new" button class="btn">Create new</a></td>
{% if events %}
    <table class ="table table-striped">
    <thead>
    <tr>
      <th>Event Name</th>
      <th>Actions</th>
      </tr>
      </thead>
      <tbody>
          {% for event in events %}
          <tr>
          <td>{{ event.name }}</td>
          <td><a href="/event/{{event.id}}" button class="btn">Show</a></td>
          <td><a href="/event/edit/{{event.id}}" button class="btn">Edit</a></td>
          <td><a href="/event/{{event.id}}" button class="btn">Delete</a></td>
          </tr>
          {% endfor %}
      </tbody>
      </table>
{% else %}
    <p>No events</p>
{% endif %}
{% endblock %}
